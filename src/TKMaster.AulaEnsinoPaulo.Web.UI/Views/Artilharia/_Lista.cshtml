@model IEnumerable<ArtilhariaViewModel>

<table class="table table-striped table-bordered" id="dtArtilharia" style="width:100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                Jogador
            </th>
            <th style="width:150px; text-align-last:center;">
                Categoria
            </th>
            <th style="width:150px; text-align-last:center;">
                Gols
            </th>
            <th style="width:150px; text-align-last:center;">
                Assistência
            </th>
            <th style="width:150px; text-align-last:center;">
                Ano
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.ToList())
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Jogador.Nome)
            </td>
            <td style="width:150px; text-align-last:center;">
                @Html.DisplayFor(modelItem => item.Categoria.Nome)
            </td>
            <td style="width:150px; text-align-last:center;">
                @Html.DisplayFor(modelItem => item.NumeroGols)
            </td>
            <td style="width:150px; text-align-last:center;">
                @Html.DisplayFor(modelItem => item.NumeroAssistencia)
            </td>
            <td style="width:150px; text-align-last:center;">
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
        </tr>
        }
    </tbody>
</table>
