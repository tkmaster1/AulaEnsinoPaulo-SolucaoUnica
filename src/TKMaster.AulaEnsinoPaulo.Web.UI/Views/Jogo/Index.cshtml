@{
    ViewData["Title"] = "Jogo Gráfico";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Artilharia</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item">Gráficos</li>
                    <li class="breadcrumb-item active">Jogo 1</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div class="card card-default">
            <form id="formPrincipal" action="/Revisao/Pesquisar" method="post">
                <div class="card-header">
                    <h3 class="card-title">Filtros</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove">
                            <i class="fas fa-times"></i>
                        </button>
                    </div>
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <div class="form-group">
                                    <label>Categoria</label>
                                    @Html.DropDownList("cb-categoria", (SelectList)ViewBag.Categoria, "Selecione", new { @class = "form-control" })
                                </div>
                                <!-- /.form-group -->
                            </div>
                            <!-- /.col -->
                        </div>
                        <div class="col-md-4">&nbsp;</div>
                        <div class="col-md-4">&nbsp;</div>
                    </div>
                </div>
                <!-- /.card-body -->
                <div class="card-footer">
                    <div class="row pull-right">
                        <div>
                            <label>&nbsp;</label>
                            <div class="btn-pesquisar">
                                <button type="button" class="btn btn-primary fonteBtn" id="btnPesquisar" onclick="FiltrarConteudo()">Pesquisar</button>
                            </div>
                        </div>
                        <div>&nbsp;</div>
                        <div>
                            <label>&nbsp;</label>
                            <div class="btn-pesquisar">
                                <button type="button" class="btn btn-warning btn-secund fonteBtn" id="btnLimparCampos">Limpar</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!-- BAR CHART -->
        <div class="card card-success">
            <div class="card-header">
                <h3 class="card-title">Gráfico de Barra do Jogo 1</h3>

                <div class="card-tools">
                    <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                    </button>
                    <button type="button" class="btn btn-tool" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="chart" id="canvas-wrapper">
                    <canvas id="barChart" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%;"></canvas>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
    </div>
</section>

@section Scripts{

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/Views/graficoJogo1.js?timestamp=@DateTime.Now.Ticks.ToString()" asp-append-version="true"></script>
}