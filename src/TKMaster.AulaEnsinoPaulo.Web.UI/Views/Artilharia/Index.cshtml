@model IEnumerable<ArtilhariaViewModel>

@{
    ViewData["Title"] = "Artilharia";
}

<!-- Content Header (Page header) -->
<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0 text-dark">Artilharia</h1>
            </div><!-- /.col -->
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="breadcrumb-item">Consultas</li>
                    <li class="breadcrumb-item active">Artilharia</li>
                </ol>
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <!-- DataTables Example -->
        <div class="card mb-3">
            <div class="card-header">
                <i class="fa fa-fw fa-bars"></i>
                Lista
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered" id="dtArtilharia" style="width:100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>
                                    Jogador
                                </th>
                                <th style="width:150px; text-align-last:center;">
                                    Gols
                                </th>
                                <th style="width:150px; text-align-last:center;">
                                    Assistência
                                </th>
                                <th style="width:150px; text-align-last:center;">
                                    Ano
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.ToList())
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Jogador.Nome)
                                    </td>
                                    <td style="width:150px; text-align-last:center;">
                                        @Html.DisplayFor(modelItem => item.NumeroGols)
                                    </td>
                                    <td style="width:150px; text-align-last:center;">
                                        @Html.DisplayFor(modelItem => item.NumeroAssistencia)
                                    </td>
                                    <td style="width:150px; text-align-last:center;">
                                        @Html.DisplayFor(modelItem => item.Ano)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script src="~/js/Views/artilharia.js?timestamp=@DateTime.Now.Ticks.ToString()" asp-append-version="true"></script>
}